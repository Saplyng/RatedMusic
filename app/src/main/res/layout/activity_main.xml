<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="242dp"
        android:layout_height="40dp"
        android:layout_marginStart="55dp"
        app:layout_constraintStart_toEndOf="@+id/idPlay1"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageButton
        android:id="@+id/idPlay1"
        android:layout_width="90dp"
        android:layout_height="71dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="102dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageButton
        android:id="@+id/idPlay2"
        android:layout_width="90dp"
        android:layout_height="71dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idPlay1"
        app:srcCompat="@android:drawable/ic_media_play" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="242dp"
        android:layout_height="31dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="40dp"
        android:text="Twisted Threads"
        app:layout_constraintStart_toEndOf="@+id/idPlay3"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="242dp"
        android:layout_height="31dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="40dp"
        android:text="Lucky Sevens"
        app:layout_constraintStart_toEndOf="@+id/idPlay2"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar" />

    <RatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="242dp"
        android:layout_height="40dp"
        android:layout_marginStart="52dp"
        app:layout_constraintStart_toEndOf="@+id/idPlay2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <RatingBar
        android:id="@+id/ratingBar3"
        android:layout_width="242dp"
        android:layout_height="40dp"
        android:layout_marginStart="52dp"
        app:layout_constraintStart_toEndOf="@+id/idPlay3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageButton
        android:id="@+id/idPlay3"
        android:layout_width="90dp"
        android:layout_height="71dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idPlay2"
        app:srcCompat="@android:drawable/ic_media_play" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="242dp"
        android:layout_height="31dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="102dp"
        android:text="Hereward The Wake"
        app:layout_constraintStart_toEndOf="@+id/idPlay1"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>